      // End #main
      form.form-horizontal.container.d-flex.align-items-center.justify-content-between(action='/form' method='POST')
        fieldset
          br
          br
          .control-group
            // Name
            label.control-label(for='Name') Name
            .controls
              input#Name.input-xlarge(type='text' name='Name' placeholder='')
          .control-group
            // Age
            label.control-label(for='age') Age
            .controls
              input#age.input-xlarge(type='text' name='age' placeholder='')
          .control-group
            // Gender
            label.control-label(for='gender') Gender
            .controls
              select#gender(name='gender')
                option(value='male') Male
                option(value='female') Female
                option(value='others') Others
              br
          .control-group
            // Phone Number
            label.control-label(for='email')
              Phone number (with Country Code) 
            .controls
              input#phno.input-xlarge(type='text' name='phno' placeholder='')
          .control-group
            // Email ID
            label.control-label(for='email') Email
            .controls
              input#email.input-xlarge(type='text' name='email' placeholder='')
            button.get-started-btn.scrollto.my-3.bg-warning(type='submit') Submit
          br
          br
